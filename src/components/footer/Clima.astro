---
const restClima = await fetch(
  `http://api.weatherapi.com/v1/current.json?key=472e0e0dc0844e6b9c3234807250605&q=Santo%20Domingo&aqi=no`
);

const dataClima = await restClima.json();

const {
  current: {
    temp_c,
    condition: { text, icon }
  }
} = dataClima;

