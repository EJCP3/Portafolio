---
import Close from "~/icons/Close.astro";

const { name, background, size, width, margin, tamaño } = Astro.props;
const id = name.toLowerCase().replace(/\s+/g, "-"); // ID único por nombre
---

<section  class="modal-wrapper" data-modal-id={id}>
  <dialog  class=`${width} modal  rounded outline-none bg-white  p-0 `>
    <header class="flex justify-between items-center mb-4">
      <h2
        class="flex justify-center items-center gap-2 text-2xl font-bold text-center"
      >
        <slot name="icon" />
        {name}
      </h2>
      <span class="modal-close cursor-pointer"><Close /></span> 
    </header>
    <slot />
  </dialog>

  <figure class=`modal-btn cursor-pointer ${margin}`>
    <img src={background} alt={name} class={size} />
    <figcaption
      class=`text-base text-white mix-blend-difference outline-pink-500  text-center font-light ${tamaño}`
    >
      {name}
    </figcaption>
  </figure>
    <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</section>



