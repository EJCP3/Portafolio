---
import Close from "~/icons/Close.astro";

const { name, background, size } = Astro.props;
const id = name.toLowerCase().replace(/\s+/g, "-"); // ID Ãºnico por nombre
---

<section class="modal-wrapper " data-modal-id={id}>
  <dialog class="modal mx-auto my-4 p-4  rounded outline-none ">
    <header class="flex justify-between items-center mb-4">
      <h2
        class="flex justify-center items-center gap-2 text-2xl font-bold text-center"
      >
        <slot name="icon" />
        {name}
      </h2>
      <span class="modal-close cursor-pointer"><Close /></span>
    </header>
    <slot />
  </dialog>

  <figure class="modal-btn cursor-pointer">
    <img src={background} alt={name} class={size} />
    <figcaption class="text-sm text-gray-500">{name}</figcaption>
  </figure>
</section>
